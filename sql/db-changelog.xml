<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-3.8.xsd">


    <changeSet id="Create Table Books" author="Shiva">
        <createTable tableName="book">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_BOOK" />
            </column>
            <column name="name" type="varchar(100)">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="Insert 3 Books" author="Shiva">
        <insert tableName="book">
            <column name="name" value="Book 1" />
        </insert>
        <insert tableName="book">
            <column name="name" value="Book 2" />
        </insert>
        <insert tableName="book">
            <column name="name" value="Book 3" />
        </insert>
    </changeSet>

</databaseChangeLog>